{% extends 'basetp.html.twig' %}

{% block body %}
    <div class="container">
        <div class="row">
            <a href="{{ path('add_product') }}"><button class="btn btn-primary">Ajouter </button></a>
            <h1 class="text-center">Mes fruits et l√©gumes SANS OGM BORDEL </h1>

            {% for flash_message in app.session.flashBag.get('notice') %}
                <div class="flash-notice">
                    {{ flash_message }}
                </div>
            {% endfor %}

            {% for product in listeFruitsLegumes %}
                <div class="col-sm-4">
                    <div class="thumbnail">
                        <div class="caption">
                            <img src="{{ asset('images/') }}{{ product.image }}" alt="thumb" width="50%" height="50%"/>
                            {#<img src="http://placehold.it/320x150" alt="image" />#}
                            <p> <h4 class="pull-right">{{ product.prix }} euros </h4>
                            <h4>
                                <a href="{{ path('one_product', {'id':product.id}) }}">
                                    {{ product.nom }}
                                </a>
                            </h4></p>
                            <p>Mois semis : {{ product.moisSemis|saison }} </p>
                            <p>Stock : {{ product.stock }} </p>
                            {% if (product.type != null) %}
                                <p>Type : {{ product.type.nom }} </p>
                            {% endif %}
                            <p>
                                <a href="{{ path('delete_admin', {'id':product.id}) }}">
                                    <button type="button" class="btn btn-default">
                                        <span class="glyphicon glyphicon-trash" aria-hidden="true"></span>
                                    </button>
                                </a>
                                <a href="{{ path('update_admin', {'id':product.id}) }}">
                                    <button type="button" class="btn btn-default">
                                        <span class="glyphicon glyphicon-pencil" aria-hidden="true"></span>
                                    </button>
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            {% endfor %}

        </div>
    </div>
{% endblock %}
